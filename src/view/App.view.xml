<mvc:View
    controllerName="hotel.ui5.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    busy="{appView>/busy}"
    busyIndicatorDelay="{appView>/delay}"
    xmlns:f="sap.f"
    xmlns="sap.m">

    <f:ShellBar
            title="天誉酒店一站式预定平台系统"
            avatarPressed="avatarPressed"
            secondTitle="Home"
            homeIcon="https://ui5.sap.com/resources/sap/ui/documentation/sdk/images/logo_ui5.png"
            showCopilot="true"
            showSearch="true"
            showNotifications="true"
            showProductSwitcher="true"
            notificationsNumber="2">
        <f:menu>
            <Menu>
                <MenuItem text="Flight booking" icon="sap-icon://flight" />
                <MenuItem text="Car rental" icon="sap-icon://car-rental" />
            </Menu>
        </f:menu>
        <f:profile>
            <f:Avatar initials="UI" src="https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=3968417432,4100418615&amp;fm=26&amp;gp=0.jpg"/>
        </f:profile>
       <!-- <f:additionalContent>
            <OverflowToolbarButton icon="sap-icon://account"/>
        </f:additionalContent>-->
    </f:ShellBar>
        <App id="idAppControl"
             backgroundOpacity="0.3">
        </App>


    <!--<SplitApp id="idAppControl" />-->
</mvc:View>